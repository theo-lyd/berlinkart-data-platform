[sqlfluff]
# 1. Dialect & Templater
dialect = duckdb
templater = jinja

# 2. Rules to Ignore (Merged)
# L031: Avoid aliases in joins (from your old config)
# TMP: Ignore undefined jinja variables (Fixes 'cents_to_euros' CI error)
# LT02: Ignore strict indentation (Fixes 'Line should not be indented' error)
exclude_rules = L031, TMP, LT02

# 3. Ignore Level
# 'templating' is specific to Jinja issues. It stops the linter from crashing
# when it sees dbt macros it doesn't understand.
ignore = templating

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 4

# --- Your Existing Style Preferences (Preserved) ---
[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = trailing

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper
